{
	"name": "Snakou",
	"description": "Ne rate plus aucun live ni aucune vid√©o avec la Master Extension !",
	"version": "2.5.2",
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"background": {
		"scripts": [
			"js/config.js",
			"libs/jquery/dist/jquery.min.js",
			"js/fonctions.js",
			"js/background.js"
		]
	},
	"browser_action": {
		"default_title": "Snakou",
		"default_popup": "html/popup.html",
		"default_icon": "images/icon128.png"
	},
	"permissions": [
		"storage",
		"notifications",
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://game.mastersnakou.fr/"
			],
			"js": [
				"libs/jquery/dist/jquery.min.js",
				"js/username-grabber.js"
			]
		},
		{
			"matches": [
				"http://www.twitch.tv/mastersnakou",
				"https://www.twitch.tv/mastersnakou"
			],
			"js": [
				"libs/jquery/dist/jquery.min.js",
				"libs/socket.io-client/dist/socket.io.js",
				"js/twitch-event.js"
			],
			"css": [
				"css/twitch-event.css"
			]
		}
	],
	"manifest_version": 2
}