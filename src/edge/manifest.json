{
    "author": "Snakou",
    "version": "2.6.0",
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "browser_action": {
        "default_icon": {
            "40": "images/icon48.png"
        },
        "default_popup": "html/popup.html",
        "default_title": "Snakou"
    },
    "content_scripts": [
        {
            "js": [
                "libs/jquery/dist/jquery.min.js",
                "js/username-grabber.js"
            ],
            "matches": [
                "https://game.mastersnakou.fr/"
            ]
        },
        {
            "css": [
                "css/twitch-event.css"
            ],
            "js": [
                "libs/jquery/dist/jquery.min.js",
                "libs/socket.io-client/dist/socket.io.js",
                "js/twitch-event.js"
            ],
            "matches": [
                "https://www.twitch.tv/mastersnakou"
            ]
        }
    ],
    "description": "Ne rate plus aucun live ni aucune vid√©o avec la Master Extension !",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "manifest_version": 2,
    "name": "Snakou",
    "options_page": "html/options.html",
    "permissions": [
        "storage",
        "notifications",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "-ms-preload": {
        "backgroundScript": "js/backgroundScriptsAPIBridge.js",
        "contentScript": "js/contentScriptsAPIBridge.js"
    }
}